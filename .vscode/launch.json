    <script>
        // 슬라이드 이동 로직 (자동 루프 포함)
        function moveSlide(trackId, direction, itemsVisible) {
            const track = document.getElementById(trackId);
            const items = track.children;
            const totalSlides = items.length;
            let currentIndex = parseInt(track.getAttribute('data-index'));
            let nextIndex = currentIndex + direction;

            // 무한 루프 로직
            if (nextIndex < 0) {
                nextIndex = totalSlides - Math.floor(itemsVisible); // 맨 끝으로
            } else if (nextIndex > totalSlides - Math.floor(itemsVisible)) {
                nextIndex = 0; // 맨 처음으로
            }

            const movePercent = -(100 / itemsVisible) * nextIndex;
            track.style.transform = `translateX(${movePercent}vw)`;
            track.setAttribute('data-index', nextIndex);
        }

        // 자동 슬라이드 시작 함수 (3초마다 왼쪽으로 이동)
        function startAutoSlide(trackId, itemsVisible) {
            setInterval(() => {
                moveSlide(trackId, 1, itemsVisible); // 방향 1은 왼쪽으로 이동
            }, 3000); // 3000ms = 3초
        }

        // 페이지 로드 시 자동 슬라이드 실행
        window.onload = function() {
            startAutoSlide('pop-track', 5.5); // Most Popular 시작
            startAutoSlide('video-track', 2.5); // Video 시작
        };

        // K-FOOD 썸네일 클릭
        function goFoodSlide(index) {
            const track = document.getElementById('food-track');
            const thumbs = document.querySelectorAll('.thumb-item');
            track.style.transform = `translateX(-${index * 100}%)`;
            thumbs.forEach(t => t.classList.remove('active'));
            thumbs[index].classList.add('active');
        }

        // K-TRAVEL 탭 클릭
        function changeTab(element, imgUrl) {
            document.querySelectorAll('.travel-tab').forEach(tab => tab.classList.remove('active'));
            element.classList.add('active');
            document.getElementById('travel-display').src = imgUrl;
        }
    </script>
</body>
</html>